# SMILEY E-commerce Environment Variables
# Copy this file to .env.local and fill in your actual values

# ===========================================
# DEVELOPMENT SETUP
# ===========================================
# For development, you can use these test values
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# STRIPE CONFIGURATION
# ===========================================
# Get these from your Stripe Dashboard
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_SUB_PRICE_ID=price_1234567890
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Get these from your Supabase Dashboard
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here


# ===========================================
# ANALYTICS & TRACKING
# ===========================================
# Google Analytics 4
NEXT_PUBLIC_GA_ID=your_google_analytics_id_here

# ===========================================
# LIVE CHAT INTEGRATION
# ===========================================
# Choose one: Crisp or Tidio
NEXT_PUBLIC_CRISP_WEBSITE_ID=your_crisp_website_id_here
# or
NEXT_PUBLIC_TIDIO_ID=your_tidio_id_here

# ===========================================
# EMAIL SERVICES
# ===========================================
# Choose one: SendGrid or Mailchimp
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@smiley.com

# or
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_LIST_ID=your_mailchimp_list_id_here

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
# Enable debug mode for development
NEXT_PUBLIC_DEBUG=true

# ===========================================
# PRODUCTION SETTINGS
# ===========================================
# Uncomment and set these for production
# NODE_ENV=production
# NEXT_PUBLIC_APP_URL=https://your-domain.com








